// import { EmailTemplate } from '../../../components/EmailTemplate';
import { NextResponse } from "next/server";
import { Resend } from "resend";

const resend = new Resend('re_THkbosgt_AYXKXoBawq6P7MwYHgUvoKVo');
const fromEmail = "arlind.31@hotmail.de";


export async function POST(req, res) {
  const { email, subject, message } = await req.json();
  console.log(email, subject, message);
  try {
    const data = await resend.emails.send({
      from: fromEmail,
      to: [fromEmail, email], // Fügen Sie die Ziel-E-Mail-Adresse hier hinzu
      subject: subject,
      html: <p>{message}</p>,
      react: (
        <>
          <h1>{subject}</h1>
          <p>Vielen Dank für deine Nachricht!</p>
          <p>Nachricht wurde übermittelt:</p>
          <p>{message}</p>
        </>
      ),
    });
    return NextResponse.json(data);
  } catch (error) {
    return NextResponse.json({ error });
  }
}